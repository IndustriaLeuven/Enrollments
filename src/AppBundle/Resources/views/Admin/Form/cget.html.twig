{% extends 'AppBundle:Admin/Form:skeleton.html.twig' %}
{% block content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ icon('list-alt') }} Forms</h3>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th><th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for obj in data %}
                    <tr>
                        <td>{{ obj.name }}</td>
                        <td>
                            {% spaceless %}
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-default" href="{{ url('app_get_enrollment', {form: obj.id}) }}" title="Show form">
                                        {{ icon('list-alt') }}<span class="sr-only">Show form</span>
                                    </a>
                                    <a class="btn btn-primary" href="{{ url('admin_get_form_enrollments', {form: obj.id}) }}" title="List enrollments">
                                        {{ icon('file-text-o') }}<span class="sr-only">List enrollments</span>
                                    </a>
                                    <a class="btn btn-info" href="{{ url('admin_get_form', {form: obj.id}) }}" title="View">
                                        {{ icon('eye') }}<span class="sr-only">View</span>
                                    </a>
                                    <a class="btn btn-default" href="{{ url('admin_edit_form', {form: obj.id}) }}" title="Edit">
                                        {{ icon('edit') }}<span class="sr-only">Edit</span>
                                    </a>
                                    <a class="btn btn-danger" href="{{ url('admin_remove_form', {form: obj.id}) }}" title="Delete">
                                        {{ icon('trash-o') }}<span class="sr-only">Delete</span>
                                    </a>
                                </div>
                            {% endspaceless %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
