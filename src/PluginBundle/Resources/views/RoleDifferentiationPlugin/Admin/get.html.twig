<h4>{{ 'plugin.role_differentiation.title'|trans }}</h4>
<p class="text-muted">{{ 'plugin.role_differentiation.conf.help'|trans }}</p>
<table class="table">
    <thead>
    <tr>
        <th>{{ 'plugin.role_differentation.conf.rules.condition'|trans }}</th>
        <th>{{ 'plugin.role_differentation.conf.rules.target_form'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for rule in pluginData.rules %}
        <tr>
            <td>{{ rule.condition }}</td>
            <td>
                {% if rule.target_form %}
                    <a href="{{ url('admin_get_form', {form: rule.target_form}) }}">{{ rule.target_form }}</a>
                {% else %}
                    {{ 'plugin.role_differentation.conf.rules.target_form.deny_access'|trans }}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
